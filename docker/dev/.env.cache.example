# Redis Container Settings
REDIS_PORT=<REDIS_PORT>                        # Redis port (default: 6379)
REDIS_PASSWORD=<REDIS_PASSWORD>                # Password for Redis authentication
REDIS_DATABASE=<REDIS_DATABASE>                # Database index (default: 0)
REDIS_TIMEOUT=<REDIS_TIMEOUT>                  # Timeout for operations (in ms)

# Connection Pool Configuration
REDIS_POOL_MAX_ACTIVE=<MAX_ACTIVE>             # Max active connections
REDIS_POOL_MAX_IDLE=<MAX_IDLE>                 # Max idle connections
REDIS_POOL_MIN_IDLE=<MIN_IDLE>                 # Min idle connections
REDIS_POOL_MAX_WAIT=<MAX_WAIT>                 # Max wait time (-1 = unlimited)